{
  "manifest_version": 3,
  "name": "Gemini Event Creator",
  "description": "Highlight text on any webpage to automatically create Google Calendar events using Gemini AI.",
  "version": "1.1",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity" ,
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "oauth2": {
    "client_id": "783268626889-gagb6sfqu1ogtnmtq293svhjjeh85l0s.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Create Calendar Event",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon64.png",
    "128": "icons/icon128.png"
  }

}